{
  "env": {
    "es2021": true,
    "node": true,
    "browser": false,
    "serviceworker": true
  },
  "globals": {
    "CloudflareBindings": "readonly",
    "D1Database": "readonly"
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": false
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "comma-dangle": ["error", "never"]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    ".wrangler/",
    "worker-configuration.d.ts",
    "prisma/migrations/"
  ]
}
